{
  "name": "learning.mozilla.org",
  "version": "1.0.5",
  "description": " Initial attempt at implementing Webmaker Learning front-page.",
  "author": "Mozilla",
  "license": "MPL-2.0",
  "homepage": "https://github.com/mozilla/learning.mozilla.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla/learning.mozilla.org.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla/learning.mozilla.org/issues"
  },
  "engines": {
    "node": "^4.4.1"
  },
  "scripts": {
    "copy-static-files": "run-s copy:img copy:vendor",
    "copy:img": "shx mkdir -p dist/img && shx cp -r img/* dist/img",
    "copy:vendor": "run-s copy:vendor:bootstrap copy:vendor:font-awesome copy:vendor:tabzilla copy:vendor:mofo-ui",
    "copy:vendor:bootstrap": "shx mkdir -p dist/vendor/bootstrap && shx cp -r node_modules/bootstrap/dist/* dist/vendor/bootstrap",
    "copy:vendor:font-awesome": "shx mkdir -p dist/vendor/font-awesome && shx cp -r node_modules/font-awesome/* dist/vendor/font-awesome",
    "copy:vendor:tabzilla": "shx mkdir -p dist/vendor/font-awesome && shx cp node_modules/mozilla-tabzilla/css/tabzilla.css dist/vendor/font-awesome && shx cp -r node_modules/mozilla-tabzilla/media/img dist/vendor/font-awesome",
    "copy:vendor:mofo-ui": "shx mkdir -p dist/vendor/mofo-ui && shx cp node_modules/mofo-ui/dist/mofo-ui.css dist/vendor/mofo-ui",
    "cleanup": "shx rm -rf dist",
    "l10n": "pontoon-to-json",
    "less": "lessc less/index.less dist/styles.css --source-map=dist/styles.css.map --clean-css=\"--s0\"",
    "lint": "eslint --ext .js --ext .jsx .",
    "lint:fix": "npm run lint -- --fix",
    "prep": "run-s cleanup copy-static-files lint less l10n webpack:static webpack",
    "postinstall": "npm run l10n",
    "start": "npm run prep && node app.js",
    "test": "run-s prep",
    "webpack": "webpack --config ./config/webpack.config.js --progress --colors",
    "webpack:dev": "webpack-dev-server --config ./config/webpack.config.js --progress --colors --watch",
    "webpack:static": "webpack --config ./config/index.static.config.js --progress --colors"
  },
  "dependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.3.21",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "bootstrap": "^3.3.4",
    "chalk": "^1.1.1",
    "classnames": "^2.2.1",
    "comment-parser": "^0.3.1",
    "es5-shim": "^4.4.1",
    "esprima-harmony-jscs": "^1.1.0-bin",
    "express": "^4.12.3",
    "font-awesome": "^4.3.0",
    "habitat": "^3.1.2",
    "helmet": "^2.1.1",
    "history": "^1.17.0",
    "imports-loader": "^0.6.3",
    "intl": "^1.2.4",
    "intl-locales-supported": "^1.0.0",
    "json-loader": "^0.5.1",
    "leaflet.markercluster": "^0.4.0",
    "mapbox.js": "^2.1.5",
    "merge-stream": "^1.0.0",
    "minimatch": "^3.0.0",
    "minimist": "^1.2.0",
    "mocha": "^2.1.0",
    "mofo-localize": "^0.1.1",
    "mofo-style": "^2.4.0",
    "mofo-ui": "1.5.1",
    "moment": "^2.10.3",
    "mozilla-tabzilla": "^0.5.1",
    "npm-run-all": "^3.0.0",
    "object-assign": "^4.1.0",
    "pontoon-to-json": "^1.0.1",
    "react": "^0.14.0",
    "react-addons-linked-state-mixin": "^0.14.3",
    "react-addons-pure-render-mixin": "^0.14.3",
    "react-addons-test-utils": "^0.14.3",
    "react-addons-transition-group": "^0.14.3",
    "react-circletree": "^2.5.0",
    "react-dom": "^0.14.3",
    "react-ga": "^1.0.12",
    "react-intl": "^2.1.3",
    "react-router": "^1.0.3",
    "react-select": "^0.9.1",
    "react-wp-content-loader": "0.0.2",
    "routington": "^1.0.3",
    "should": "^8.0.2",
    "shx": "^0.1.4",
    "source-map-support": "^0.4.0",
    "superagent": "^1.6.1",
    "svgo": "^0.6.1",
    "through2": "^2.0.0",
    "underscore": "^1.8.3",
    "url-template": "^2.0.6",
    "urlize": "^0.2.1",
    "val-loader": "^0.5.0",
    "validator": "^5.4.0",
    "vinyl": "^1.1.0",
    "webpack": "^1.12.9",
    "webpack-stream": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^3.3.1",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "marked": "^0.3.3",
    "open": "0.0.5",
    "simplecrawler": "^0.5.2",
    "supertest": "^1.0.1",
    "webpack-dev-server": "^1.15.0"
  },
  "private": true
}
